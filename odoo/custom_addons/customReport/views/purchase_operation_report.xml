<odoo>
    <template id="purchase_report_template">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Mal Alım Raporu</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>İsim</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.get('report_data', [])" t-as="line">
                            <tr>
                                <td>
                                    <t t-esc="line.name"/>
                                </td>
                                <td>
                                    <t t-esc="line.date_order"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
    <data>
        <record id="report_purchase" model="ir.actions.report">
            <field name="name">Purchase Report</field>
            <field name="model">purchase.operation.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_file">customReport.purchase_report_template</field>
            <field name="report_name">customReport.purchase_report_template</field>
        </record>
    </data>
</odoo>
